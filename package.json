{
	"name": "quote-wrapper",
	"displayName": "Quote Wrapper",
	"description": "为选中文本的每一行添加单引号",
	"version": "1.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"publisher": "manneia",
	"repository": {
		"type": "git",
		"url": "git@github.com:manneia/quote-wrapper.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "quote-wrapper.addQuotes",
				"title": "添加单引号到每行"
			}
		],
		"keybindings": [
			{
				"command": "quote-wrapper.addQuotes",
				"key": "ctrl+shift+q",
				"mac": "cmd+shift+q",
				"when": "editorTextFocus && editorHasSelection"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"vsce": "^2.7.0"
	}
}